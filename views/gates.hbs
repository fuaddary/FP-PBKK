<div class="col-lg-12">
	<div class="card">
		<div class="card-header">
			<strong class="card-title">Gates</strong>
            <span class="pull-right">
                <form action="/gates/add">
                    <input class="btn btn-sm btn-success" type="submit" value="Add Gate" />
                </form>
            </span>
		</div>
		<div class="card-body">
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">id</th>
						<th scope="col">name</th>
						<th scope="col">open</th>
						<th scope="col">close</th>
						<th scope="col">action</th>
					</tr>
				</thead>
				<tbody>
					{{#each gates}}
					<tr>
						<td>{{this.ga_id}}</td>
						<td>{{this.ga_name}}</td>
						<td>{{this.ga_start}}</td>
						<td>{{this.ga_end}}</td>
						<td>
							<form action="/gates/delete/{{this.ga_id}}">
								<input class="btn btn-sm btn-danger" type="submit" value="delete" />
							</form>
						</td>
					</tr>
					{{/each}}
				</tbody>
			</table>
		</div>
	</div>
</div>